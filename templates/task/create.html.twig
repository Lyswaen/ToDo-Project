{% extends 'base.html.twig' %}

{% block title 'Créer une tâche' %}

{% block header_title %}<h1>CRÉER UNE NOUVELLE TÂCHE</h1>{% endblock %}

{% block body %}
    {{ form_start(form, {'action' : path('task.create')}) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-done">Ajouter</button>
    {{ form_end(form) }}

    <a href="{{ path('task.index') }}" class="btn btn-return btn-invert">Retour à la liste des tâches</a>
{% endblock %}
